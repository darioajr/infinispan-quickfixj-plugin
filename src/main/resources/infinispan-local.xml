<?xml version="1.0" encoding="UTF-8"?>
<infinispan
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:infinispan:config:14.0 https://infinispan.org/schemas/infinispan-config-14.0.xsd"
    xmlns="urn:infinispan:config:14.0">
    
    <!-- Configuração local simplificada para desenvolvimento -->
    <cache-container default-cache="default" name="quickfixj-local-container">
        
        <!-- Cache para mensagens -->
        <local-cache name="quickfixj-messages" statistics="true">
            <expiration lifespan="86400000"/> <!-- 24 horas -->
            <memory max-count="10000" when-full="REMOVE"/>
        </local-cache>
        
        <!-- Cache para sequence numbers -->
        <local-cache name="quickfixj-sequences" statistics="true">
            <expiration lifespan="172800000"/> <!-- 48 horas -->
            <memory max-count="1000" when-full="REMOVE"/>
        </local-cache>
        
        <!-- Cache para sessões -->
        <local-cache name="quickfixj-sessions" statistics="true">
            <expiration lifespan="172800000"/> <!-- 48 horas -->
            <memory max-count="500" when-full="REMOVE"/>
        </local-cache>
        
        <!-- Cache para settings -->
        <local-cache name="quickfixj-settings" statistics="true">
            <expiration lifespan="604800000"/> <!-- 7 dias -->
            <memory max-count="100" when-full="REMOVE"/>
        </local-cache>
        
        <!-- Cache padrão -->
        <local-cache name="default" statistics="false">
            <expiration lifespan="3600000"/> <!-- 1 hora -->
            <memory max-count="1000" when-full="REMOVE"/>
        </local-cache>
    </cache-container>
</infinispan>
